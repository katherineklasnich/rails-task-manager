<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" name="complete" value="completed"> This task is completed<br>

<%= link_to "Update task", edit_path(@task) %>
<br>
<%= link_to "Back to list", tasks_path %>
<br>
<%= link_to "Delete", delete_path(@task),
    method: :delete,
    data: {confirm: "Are you sure?" } %>

